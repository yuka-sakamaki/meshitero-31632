<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ニックネーム" %> <em>(必須/8文字以内)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "8" %>
  </div>

  <div class="field">
    <%= f.label :email %><em>(必須)</em><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(必須/<%= @minimum_password_length %>文字以上/半角英数字混合)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Password/確認用" %><em>(必須)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "苗字" %><em>(必須)</em><br />
        <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "名前" %><em>(必須)</em><br />
        <%= f.text_field :first_name, autofocus: true %>
  </div>

   <div class="weight-bold-text">
      都道府県<em>(必須)</em><br />
    <%= f.collection_select(:prefecture_code_id, PrefectureCode.all, :id, :name, {include_blank: "--"}, {class:"select-box", id:"user-prefecture"}) %>
    </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
