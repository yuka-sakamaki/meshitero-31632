<div class="main">
  <div class="inner">
    <div class="form_wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <div class="field">
    <%= f.label "ユーザー名" %> <em>(必須/8文字以内)</em><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "8" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><em>(必須)</em><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(必須/<%= @minimum_password_length %>文字以上/半角英数字混合)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password/確認用" %><em>(必須)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "苗字" %><em>(必須)</em><br />
        <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名前" %><em>(必須)</em><br />
        <%= f.text_field :first_name, autofocus: true %>
  </div>

   <div class="weight-bold-text">
      都道府県<em>(必須)</em><br />
    <%= f.collection_select(:prefecture_code_id, PrefectureCode.all, :id, :name, {include_blank: "--"}, {class:"select-box", id:"user-prefecture"}) %>
    </div>

  <div class="actions">
    <%= f.submit "新規登録", class: :form_btn %>
  </div>
<% end %>
<%# <%= render "devise/shared/links" %> 
    </div>
  </div>
</div>
